; Wait for x us

__M_WAIT1000	MACRO
	PUSH	ACC
	MOV	A, #241
	DJNZ	ACC, $
	DJNZ	ACC, $
	NOP
	POP	ACC
	ENDM

__M_WAIT500	MACRO
	PUSH	ACC
	MOV	A, #247
	DJNZ	ACC, $
	NOP
	POP	ACC
	ENDM

__M_WAIT100	MACRO
	PUSH	ACC
	MOV	A, #47
	DJNZ	ACC, $
	NOP
	POP	ACC
	ENDM
	
__M_WAIT5000	MACRO
	__M_WAIT1000
	__M_WAIT1000
	__M_WAIT1000
	__M_WAIT1000
	__M_WAIT1000
	ENDM	